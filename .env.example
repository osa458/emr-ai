# ===========================================
# EMR AI - Environment Configuration
# ===========================================

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ===========================================
# FHIR Server (Aidbox/Medplum)
# ===========================================
MEDPLUM_BASE_URL=http://localhost:8103/fhir/R4
MEDPLUM_CLIENT_ID=
MEDPLUM_CLIENT_SECRET=

# Aidbox (alternative FHIR server)
AIDBOX_BASE_URL=http://localhost:8888
AIDBOX_CLIENT_ID=
AIDBOX_CLIENT_SECRET=

# ===========================================
# Database (non-FHIR application data)
# ===========================================
DATABASE_URL="postgresql://emr_user:emr_password@localhost:5434/emr_app"

# ===========================================
# Authentication
# ===========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-generate-with-openssl-rand-base64-32

# ===========================================
# AI/LLM Configuration
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096

# LLM Rate Limiting
LLM_RATE_LIMIT_TOKENS=100
LLM_RATE_LIMIT_REFILL_RATE=10
LLM_MAX_RETRIES=3

# ===========================================
# Clinical Integrations
# ===========================================

# Surescripts E-Prescribing
SURESCRIPTS_PARTNER_ID=
SURESCRIPTS_API_KEY=
SURESCRIPTS_ENV=test
SURESCRIPTS_NCPDP_ID=
SURESCRIPTS_DEA_NUMBER=

# Lab Interface
LAB_INTERFACE_ENDPOINT=http://localhost:2575
LAB_INTERFACE_API_KEY=
LAB_INTERFACE_PROTOCOL=fhir
LAB_NAME=Reference Lab
LAB_OID=2.16.840.1.113883.3.1234
LAB_MLLP_PORT=2575

# ===========================================
# Feature Flags
# ===========================================
FEATURE_AI_ASSIST=true
FEATURE_MORNING_TRIAGE=true
FEATURE_DISCHARGE_PLANNING=true
FEATURE_E_PRESCRIBING=false
FEATURE_LAB_INTERFACE=false
